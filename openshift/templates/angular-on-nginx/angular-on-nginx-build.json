{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "${NAME}",
    "creationTimestamp": null,
    "labels": {
      "app": "${GROUP_NAME}"
    }
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}"
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}-build",
        "creationTimestamp": null,
        "labels": {
          "app": "${GROUP_NAME}"
        }
      },
      "spec": {
        "runPolicy": "Parallel",
        "completionDeadlineSeconds": 1800,
        "nodeSelector": null,
        "postCommit": {},
        "source": {
          "dockerfile": "FROM ${ANGULAR_BUILDER_IMAGE}:latest\nCOPY * /tmp/app/dist/admin/\nCMD  /usr/libexec/s2i/run",
          "images": [
              {
                  "as": null,
                  "from": {
                      "kind": "ImageStreamTag",
                      "name": "${ANGULAR_BUILDER_IMAGE}:latest"
                  },
                  "paths": [
                      {
                          "destinationDir": "tmp",
                          "sourcePath": "/opt/app-root/src/dist/."
                      }
                  ]
              }
          ],
          "type": "Dockerfile"
        },
        "strategy": {
          "dockerStrategy": {
              "from": {
                  "kind": "ImageStreamTag",
                  "name": "${NGINX_RUNTIME_IMAGE}:latest"
              }
          },
          "type": "Docker"
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:latest"
          }
        },
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ],
        "resources": {
          "requests": {
            "cpu": "100m",
            "memory": "2Gi"
          },
          "limits": {
            "cpu": "1",
            "memory": "4Gi"
          }
        }
      },
      "status": {
        "lastVersion": 0
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the objects defined in this template.",
      "required": true,
      "value": "eagle-admin"
    },
    {
      "name": "GROUP_NAME",
      "displayName": "Group Name",
      "description": "The name to group all of the frontend objects defined in this template.",
      "required": true,
      "value": "eagle-epic"
    },
    {
      "name": "ANGULAR_BUILDER_IMAGE",
      "displayName": "Angular Builder Image",
      "description": "The image that we compiled our code in.",
      "required": true,
      "value": "eagle-admin-angular-builder"
    },
    {
      "name": "NGINX_RUNTIME_IMAGE",
      "displayName": "NGINX Runtime Image",
      "description": "The NGINX image with our settings applied to.",
      "required": true,
      "value": "eagle-admin-nginx-runtime"
    }
  ]
}
