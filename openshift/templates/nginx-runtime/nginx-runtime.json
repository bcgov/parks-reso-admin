{
  "kind": "Template",
  "apiVersion": "v1",
  "metadata": {
    "name": "${NAME}",
    "creationTimestamp": null
  },
  "objects": [
    {
      "kind": "ImageStream",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}"
      }
    },
    {
      "kind": "BuildConfig",
      "apiVersion": "v1",
      "metadata": {
        "name": "${NAME}",
        "creationTimestamp": null,
        "labels": {
          "app": "${GROUP_NAME}"
        }
      },
      "spec": {
        "runPolicy": "Serial",
        "source": {
          "type": "Git",
          "git": {
            "uri": "${GIT_REPO_URL}",
            "ref": "${GIT_REPO_BRANCH}"
          },
          "contextDir": "openshift/templates/nginx-runtime/"
        },
        "strategy": {
          "dockerStrategy": {
            "pullSecret": {
              "name": "artifactory-pull-secret"
            }
          },
          "type": "Docker"
        },
        "output": {
          "to": {
            "kind": "ImageStreamTag",
            "name": "${NAME}:latest"
          }
        },
        "triggers": [
          {
            "type": "ImageChange"
          },
          {
            "type": "ConfigChange"
          }
        ],
        "resources": {},
        "postCommit": {}
      },
      "status": {
        "lastVersion": 0
      }
    }
  ],
  "parameters": [
    {
      "name": "NAME",
      "displayName": "Name",
      "description": "The name assigned to all of the frontend objects defined in this template.    You should keep this as default unless your know what your doing.",
      "required": true,
      "value": "eagle-admin-nginx-runtime"
    },
    {
      "name": "GROUP_NAME",
      "displayName": "Group Name",
      "description": "The name to group all of the frontend objects defined in this template.",
      "required": true,
      "value": "eagle-epic"
    },
    {
      "name": "GIT_REPO_URL",
      "displayName": "Git Repo URL",
      "description": "The URL to the customized project copy of the original common angular scaffold project https://github.com/bcgov/angular-scaffold.",
      "required": true,
      "value": "https://github.com/bcgov/eagle-admin"
    },
    {
      "name": "GIT_REPO_BRANCH",
      "displayName": "Git Repo Branch",
      "description": "The branch with your GIT repo.",
      "required": true,
      "value": "develop"
    }
  ]
}